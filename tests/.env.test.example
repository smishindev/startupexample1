# Test environment variables
# Copy this file to .env.test and fill in your values

# Application URL (Frontend runs on 5173, Backend API on 3001)
BASE_URL=http://localhost:5173
API_BASE_URL=http://localhost:3001

# Browser settings
HEADLESS=true
BROWSER=chromium  # chromium, firefox, webkit

# Test user credentials (create these users in your test database)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin123

STUDENT_EMAIL=student@example.com
STUDENT_PASSWORD=student123

INSTRUCTOR_EMAIL=instructor@example.com
INSTRUCTOR_PASSWORD=instructor123

# API settings
API_TIMEOUT=30000

# Stripe test keys (use test mode only - get from https://dashboard.stripe.com/test/apikeys)
STRIPE_TEST_PUBLISHABLE_KEY=pk_test_your_key_here
STRIPE_TEST_SECRET_KEY=sk_test_your_key_here

# Database (for testing against test DB)
DB_SERVER=localhost
DB_PORT=61299
DB_DATABASE=your_test_database
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# Email testing (optional - for testing email functionality)
TEST_EMAIL_USER=your_test_email@example.com
TEST_EMAIL_PASSWORD=your_email_password
